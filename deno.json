{
	"version": "0.4.0",
	"name": "@mr/tracer",
	"exports": {
		".": "./mod.ts"
	},
	"tasks": {
		"build": "deno run -A scripts/build.ts"
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.41.1",
		"@std/assert": "jsr:@std/assert@^0.221.0",
		"@std/testing": "jsr:@std/testing@^0.221.0",
		"tctx": "npm:tctx@^0.2"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm",
		"src"
	],
	"publish": {
		"include": [
			"*.ts",
			"license",
			"readme.md"
		],
		"exclude": [
			"*.test.ts"
		]
	}
}
